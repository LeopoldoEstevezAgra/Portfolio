{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{parent()}}
    <link rel="stylesheet" href="{{asset('build/css/security/register.css')}}">

{% endblock %}

{% block body %}

    {% if error %}
    <p>
        {{error.messageKey|trans(error.messageData,'security')}}
    </p>
    {% endif %}
    <form action="{{path('login')}}" method="POST">
        <div class="container">
            <div class="row">
                <h1 class="mt-4 mb-3 center">Login</h1>
            </div>
        </div>
        <label>
            <p class="label-txt">USERNAME</p>
            <input type="text" id="username" name="_username" value="{{ last_username }}" class="input" />
            <div class="line-box">
                <div class="line"></div>
            </div>
        </label>
        <label>
            <p class="label-txt">
                PASSWORD
            </p>
            <input type="password" id="password" name="_password" value="" class="input" />
            <div class="line-box">
                <div class="line"></div>
            </div>
        </label>
        <button type="submit">Login</button>
    </form>

{% endblock %}

{% block javascripts %}
    {{parent()}}

{% endblock %}