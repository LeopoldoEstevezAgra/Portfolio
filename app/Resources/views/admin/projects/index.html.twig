{% extends 'admin/index.html.twig' %}

{% block title %}
    Projects
{% endblock %}

{% block stylesheets %}
    {{parent()}}

{% endblock %}

{% block heading %}
    Projects

{% endblock %}
{% block breadcrumb%}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{path('admin_dashboard')}}">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Projects </li>
    </ol>
{% endblock %}


{% block content%}
<a href="{{path('admin_projects_new')}}" type="button" class="btn btn-success mg-bot-15px">
        <i class="fas fa-plus"></i>
        New Project
</a>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Created At</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    {% for project in projects %}
        <tr>
            <th class="v-align-mid" scope="row">{{project.id}}</th>
            <td class="v-align-mid">{{project.name}}</td>
            <td class="v-align-mid">{{project.description}}</td>
            <td class="v-align-mid">{{project.startDate | localizeddate('long','none')}}</td>
            <td class="v-align-mid">
                <a type="button" class="btn btn-primary ">
                    <i class="fas fa-pencil-alt"></i>
                </a>
                <a type="button" class="btn btn-danger">
                    <i class="fas fa-trash"></i>
                </a>
                <a type="button" class="btn btn-info">
                    <i class="fas fa-eye"></i>
                </a>
            </td>
        </tr>   
    {% endfor %}
  </tbody>
</table>
{% endblock %}

{% block javascripts %}
{{parent()}}

{% endblock %}

